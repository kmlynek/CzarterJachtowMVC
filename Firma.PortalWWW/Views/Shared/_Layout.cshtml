@{
    var teksty = ViewBag.Teksty as Dictionary<string, string>;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - @teksty["layout_tytul"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-compass-fill me-1"></i> @teksty["layout_nav_nazwa"]
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill me-1"></i> @teksty["nav_strona_glowna"]
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Porty">
                            <i class="bi bi-geo-alt-fill me-1"></i> @teksty["nav_podstrona1"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Kategorie">
                            <i class="bi bi-tags-fill me-1"></i>  @teksty["nav_podstrona2"]
                        </a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Flota">
                            <i class="bi bi-rocket-fill me-1"></i> @teksty["nav_podstrona3"]
                    </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Rezerwacje">
                            <i class="bi bi-calendar-check-fill me-1"></i> @teksty["nav_podstrona4"]
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Galeria">
                            <i class="bi bi-images me-1"></i> @teksty["nav_podstrona5"]
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Kontakt">
                            <i class="bi bi-envelope-fill me-1"></i> @teksty["nav_podstrona6"]
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 border-top mt-5">
        <p class="mb-0">@teksty["stopka_tekst"]</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
