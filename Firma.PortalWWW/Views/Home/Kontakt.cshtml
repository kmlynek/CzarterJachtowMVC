@{    
    var teksty = ViewBag.Teksty as Dictionary<string, string>;

    ViewData["Title"] = teksty["tytul_podstrona6"];
}
<h2 class="mb-4 text-center">@teksty["kontakt_naglowek"]</h2>

<div class="row align-items-start">
    <div class="col-lg-6">

<form>
    <div class="mb-3">
        <label for="Imie" class="form-label">@teksty["kontakt_etykieta_imie"]</label>
        <input type="text" class="form-control" id="Imie" placeholder="@teksty["kontakt_placeholder_imie"]">
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">@teksty["kontakt_etykieta_email"]</label>
        <input type="email" class="form-control" id="Email" placeholder="@teksty["kontakt_placeholder_email"]">
    </div>

    <div class="mb-3">
        <label for="Jacht" class="form-label">@teksty["kontakt_etykieta_jacht"]</label>
        <select class="form-select" id="Jacht">
            <option selected disabled>@teksty["kontakt_jacht_wybierz"]</option>
                    <optgroup label="Jachty motorowodne">
                        <option>Posejdon 500</option>
                        <option>Rodos Explorer</option>
                        <option>Lefkada Sport 320</option>
                        <option>Atena Speedster</option>
                        <option>Zakynthos Turbo</option>
                        <option>Greco Cruiser</option>
                    </optgroup>
                    <optgroup label="Katamarany">
                        <option>Athena 400</option>
                        <option>Santorini Cat</option>
                    </optgroup>
        </select>
    </div>

    <div class="mb-3">
        <label for="DataOd" class="form-label">@teksty["kontakt_etykieta_data_od"]</label>
        <input type="date" class="form-control" id="DataOd" name="DataOd" required>
    </div>

    <div class="mb-3">
        <label for="DataDo" class="form-label">@teksty["kontakt_etykieta_data_do"]</label>
        <input type="date" class="form-control" id="DataDo" name="DataDo" required>
    </div>

    <div class="mb-3">
        <label for="Wiadomosc" class="form-label">@teksty["kontakt_etykieta_wiadomosc"]</label>
        <textarea class="form-control" id="Wiadomosc" rows="3"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">@teksty["kontakt_przycisk_wyslij"]</button>
</form>

    </div>
     
    <div class="col-lg-6 mt-4 mt-lg-0 d-flex align-items-center justify-content-center">
        <img src="~/content/grecja3.jpg" class="img-fluid rounded shadow" style="max-height: 550px; object-fit: cover;" alt="Grecja">
    </div>
</div>
