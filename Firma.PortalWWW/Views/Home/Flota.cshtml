@model IEnumerable<Firma.Data.Data.Flota.Jacht>

@{
    ViewData["Title"] = "Nasza flota";
}

<h2 class="text-center mb-4">Nasza flota</h2>

<div class="row">
    @foreach (var jacht in Model)
    {
        var sciezka = $"{jacht.IdJachtu}.jpg";
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="~/content/@sciezka" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@jacht.Nazwa" />

                <div class="card-body text-center">
                    <h5 class="card-title">@jacht.Nazwa</h5>
                    <p class="card-text">@jacht.RokBudowy</p>
                    <p class="card-text">@jacht.Opis</p>
                    <a asp-controller="Home" asp-action="Kontakt" class="btn btn-outline-primary btn-sm mt-2">
                        <i class="bi bi-calendar-check me-1"></i> Zarezerwuj
                    </a>
                </div>
            </div>
        </div>
    }
</div>
