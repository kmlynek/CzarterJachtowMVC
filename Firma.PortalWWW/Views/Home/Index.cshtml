@{
    ViewData["Title"] = "Morski Czarter – Grecja";
}

<!-- Karuzela -->
<div id="carouselGrecja" class="carousel slide mb-5 shadow" data-bs-ride="carousel">
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img src="~/content/grecja2.jpg" class="d-block w-100" alt="Grecja 1">
            <div class="carousel-caption d-none d-md-block">
                <h2>Czarter w Grecji</h2>
                <p>Odkryj wyspy Rodos, Krety, Santorini...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/content/grecja1.jpg" class="d-block w-100" alt="Grecja 2">
            <div class="carousel-caption d-none d-md-block">
                <h2>Niezapomniane rejsy</h2>
                <p>Nowoczesne jachty, turkusowe wody, grecki klimat</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselGrecja" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselGrecja" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- Zalety -->
<div class="container text-center mb-5">
    <h2 class="mb-4">Dlaczego Morski Czarter?</h2>
    <div class="row">
        <div class="col-md-4">
            <i class="bi bi-geo-alt-fill display-4 text-danger"></i>
            <h5 class="mt-2">Greckie porty</h5>
            <p>Start z Aten, Lefkady, Korfu, Santorini – wybierz kierunek!</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-rocket display-4 text-primary"></i>
            <h5 class="mt-2">Nowoczesna flota</h5>
            <p>Jachty motorowe, żaglowe, katamarany z klimatyzacją i WiFi</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-sun-fill display-4 text-warning"></i>
            <h5 class="mt-2">Idealna pogoda</h5>
            <p>Słońce, lazurowe morze i grecka kuchnia</p>
        </div>
    </div>
</div>

<!-- Opinie -->
<div class="container mb-5">
    <h2 class="text-center mb-4">Opinie naszych klientów</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p>"Czarter z Morskiego Czarteru to był strzał w 10! Świetna obsługa."</p>
                    <h6 class="text-muted text-end">– Karolina z Krakowa</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p>"Greckie wakacje życia – piękne morze, doskonały jacht!"</p>
                    <h6 class="text-muted text-end">– Michał z Nowego Sącza</h6>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <p>"Polecam każdemu! Spędziliśmy tydzień w raju."</p>
                    <h6 class="text-muted text-end">– Agnieszka z Wrocławia</h6>
                </div>
            </div>
        </div>
    </div>
</div>
