@{
    ViewData["Title"] = "Morski Czarter – Grecja";
    var teksty = ViewBag.Teksty as Dictionary<string, string>;
}

<!-- KARUZELA -->
<div id="carouselGrecja" class="carousel slide mb-5 shadow" data-bs-ride="carousel">
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img src="~/content/grecja2.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Grecja 1">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <<h2 class="fw-bold">@teksty["karuzela_naglowek1"]</h2>
                <p>@teksty["karuzela_opis1"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/content/grecja1.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Grecja 2">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h2 class="fw-bold">@teksty["karuzela_naglowek2"]</h2>
                <p>@teksty["karuzela_opis2"]</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselGrecja" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselGrecja" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- DLACZEGO MY -->
<div class="container text-center mb-5">
    <h2 class="mb-4">@teksty["naglowek_dlaczego"]</h2>
    <div class="row">
        <div class="col-md-4">
            <i class="bi bi-geo-alt-fill display-4 text-danger mb-2"></i>
            <h5>Greckie porty</h5>
            <p class="text-muted">Start z Aten, Lefkady, Korfu, Santorini – wybierz kierunek!</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-rocket display-4 text-primary mb-2"></i>
            <h5>Nowoczesna flota</h5>
            <p class="text-muted">Jachty motorowe, żaglowe, katamarany z klimatyzacją i WiFi</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-sun-fill display-4 text-warning mb-2"></i>
            <h5>Idealna pogoda</h5>
            <p class="text-muted">Słońce, lazurowe morze i grecka kuchnia</p>
        </div>
    </div>
</div>

<!-- POLECANE JACHTY -->
@await Html.PartialAsync("PolecaneJachty", (IEnumerable<Firma.Data.Data.Flota.Jacht>)ViewBag.PolecaneJachty)

<!--Zarezerwuj teraz-->
<div class="bg-primary bg-opacity-75 text-white text-center py-5 mb-5">
    <div class="container">
        <h1 class="display-5 fw-bold">@teksty["zarezerwuj_tytul"]</h1>
        <p class="lead">@teksty["zarezerwuj_opis"]</p>
        <a href="/Home/Kontakt" class="btn btn-light btn-lg mt-3">
            <i class="bi bi-calendar-check me-2"></i>Zarezerwuj teraz
        </a>
    </div>
</div>



