@{
    ViewData["Title"] = "Morski Czarter – Grecja";
}

<!-- KARUZELA -->
<div id="carouselGrecja" class="carousel slide mb-5 shadow" data-bs-ride="carousel">
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img src="~/content/grecja2.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Grecja 1">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h2 class="fw-bold">Czarter w Grecji</h2>
                <p>Odkryj wyspy Rodos, Krety, Santorini...</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/content/grecja1.jpg" class="d-block w-100" style="height: 500px; object-fit: cover;" alt="Grecja 2">
            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-3">
                <h2 class="fw-bold">Niezapomniane rejsy</h2>
                <p>Nowoczesne jachty, turkusowe wody, grecki klimat</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselGrecja" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselGrecja" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<!-- DLACZEGO MY -->
<div class="container text-center mb-5">
    <h2 class="mb-4">Dlaczego Morski Czarter?</h2>
    <div class="row">
        <div class="col-md-4">
            <i class="bi bi-geo-alt-fill display-4 text-danger mb-2"></i>
            <h5>Greckie porty</h5>
            <p class="text-muted">Start z Aten, Lefkady, Korfu, Santorini – wybierz kierunek!</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-rocket display-4 text-primary mb-2"></i>
            <h5>Nowoczesna flota</h5>
            <p class="text-muted">Jachty motorowe, żaglowe, katamarany z klimatyzacją i WiFi</p>
        </div>
        <div class="col-md-4">
            <i class="bi bi-sun-fill display-4 text-warning mb-2"></i>
            <h5>Idealna pogoda</h5>
            <p class="text-muted">Słońce, lazurowe morze i grecka kuchnia</p>
        </div>
    </div>
</div>

<!-- POLECANE JACHTY -->
<div class="container mb-5">
    <h2 class="text-center mb-4">Polecane jachty</h2>

    <div id="carouselJachty" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            <!-- Slajd 1 -->
            <div class="carousel-item active">
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <img src="~/content/1.jpg" class="card-img-top" alt="Jacht 1">
                            <div class="card-body text-center">
                                <h5 class="card-title">Sun Odyssey 440</h5>
                                <p class="card-text">Żaglowy, 4 kabiny, klimatyzacja</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Zobacz więcej</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-none d-md-block">
                        <div class="card h-100 shadow-sm">
                            <img src="~/content/2.jpg" class="card-img-top" alt="Jacht 2">
                            <div class="card-body text-center">
                                <h5 class="card-title">Lagoon 42</h5>
                                <p class="card-text">Katamaran dla 10 osób, WiFi</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Zobacz więcej</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-none d-md-block">
                        <div class="card h-100 shadow-sm">
                            <img src="~/content/3.jpg" class="card-img-top" alt="Jacht 3">
                            <div class="card-body text-center">
                                <h5 class="card-title">Bavaria Cruiser 46</h5>
                                <p class="card-text">Przestronny, idealny na dłuższe rejsy</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Zobacz więcej</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Slajd 2 -->
            <div class="carousel-item">
                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <img src="~/content/4.jpg" class="card-img-top" alt="Jacht 4">
                            <div class="card-body text-center">
                                <h5 class="card-title">Oceanis 38</h5>
                                <p class="card-text">Nowoczesny styl i komfort</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Zobacz więcej</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-none d-md-block">
                        <div class="card h-100 shadow-sm">
                            <img src="~/content/5.jpg" class="card-img-top" alt="Jacht 5">
                            <div class="card-body text-center">
                                <h5 class="card-title">Jeanneau 54</h5>
                                <p class="card-text">Luksusowy jacht z przestrzenią VIP</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Zobacz więcej</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 d-none d-md-block">
                        <div class="card h-100 shadow-sm">
                            <img src="~/content/6.jpg" class="card-img-top" alt="Jacht 6">
                            <div class="card-body text-center">
                                <h5 class="card-title">Dufour 390</h5>
                                <p class="card-text">Świetna na rejsy rodzinne</p>
                                <a href="#" class="btn btn-outline-primary btn-sm">Zobacz więcej</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Nawigacja -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselJachty" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselJachty" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>

