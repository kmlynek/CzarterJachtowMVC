@model IEnumerable<Firma.Data.Data.Flota.Port>

@{
    ViewData["Title"] = "Dostępne porty";
}

<h2 class="text-center mb-4">Dostępne porty w Grecji</h2>

<div class="row">
    @foreach (var port in Model)

    {
        var sciezka = $"grecja{port.IdPortu}.jpg";

        <div class="col-md-4 mb-3">
            <div class="border rounded shadow-sm p-3 h-100 text-center">
                <img src="~/content/@sciezka" class="img-fluid rounded mb-3" style="height: 400px; object-fit: cover;" alt="@port.Nazwa" />
                    <div class="card-body">
                        <h5 class="card-title">@port.Nazwa</h5>
                        <p class="card-text">@port.Lokalizacja</p>                    
                </div>
            </div>
        </div>
    }

</div>
