@model IEnumerable<Firma.Data.Data.Rezerwacje.Klient>

@{
    ViewData["Title"] = "Klienci";
}

<h2 class="mb-4"><i class="bi bi-people-fill me-2"></i>Lista klientów</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Dodaj klienta
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Imie)</th>
            <th>@Html.DisplayNameFor(m => m.Nazwisko)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var klient in Model)
        {
            <tr>
                <td>@klient.Imie</td>
                <td>@klient.Nazwisko</td>
                <td>@klient.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@klient.IdKlienta" class="btn btn-warning btn-sm me-1"><i class="bi bi-pencil"></i></a>
                    <a asp-action="Delete" asp-route-id="@klient.IdKlienta" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
