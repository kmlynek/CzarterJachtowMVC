@model Firma.Data.Data.Rezerwacje.Klient

@{
    ViewData["Title"] = "Usuń klienta";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i>Usuń klienta</h2>

<h4 class="mb-3">Czy na pewno chcesz usunąć tego klienta?</h4>

<div class="mb-3">
    <label class="form-label fw-bold">Imię:</label>
    <p>@Model.Imie</p>
</div>
<div class="mb-3">
    <label class="form-label fw-bold">Nazwisko:</label>
    <p>@Model.Nazwisko</p>
</div>
<div class="mb-3">
    <label class="form-label fw-bold">E-mail:</label>
    <p>@Model.Email</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdKlienta" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>
