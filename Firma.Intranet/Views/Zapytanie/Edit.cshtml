@model Firma.Data.Data.Komunikacja.Zapytanie

@{
    ViewData["Title"] = "Edytuj zapytanie";
}

<h2 class="mb-4"><i class="bi bi-pencil-square me-2"></i>Edytuj zapytanie</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" class="border p-4 rounded bg-light shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="IdZapytania" />

            <div class="mb-3">
                <label asp-for="Temat" class="form-label"></label>
                <input asp-for="Temat" class="form-control" />
                <span asp-validation-for="Temat" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Tresc" class="form-label"></label>
                <input asp-for="Tresc" class="form-control" />
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataWyslania" class="form-label"></label>
                <input asp-for="DataWyslania" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataWyslania" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start mt-4">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-save me-1"></i> Zapisz zmiany
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Wróć
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
