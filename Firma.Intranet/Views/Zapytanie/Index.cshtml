@model IEnumerable<Firma.Data.Data.Komunikacja.Zapytanie>

@{
    ViewData["Title"] = "Zapytania";
}

<h2 class="mb-4"><i class="bi bi-envelope-fill me-2"></i>Lista zapytań</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Dodaj zapytanie
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Temat</th>
            <th>Treść</th>
            <th>Email</th>
            <th>Data wysłania</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Temat</td>
                <td>@item.Tresc</td>
                <td>@item.Email</td>
                <td>@item.DataWyslania.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdZapytania" class="btn btn-warning btn-sm me-1" title="Edytuj">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdZapytania" class="btn btn-danger btn-sm" title="Usuń">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
