@model Firma.Data.Data.Komunikacja.Zapytanie

@{
    ViewData["Title"] = "Usuń zapytanie";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i>Usuń zapytanie</h2>

<h4 class="mb-3">Czy na pewno chcesz usunąć to zapytanie?</h4>

<div class="mb-3">
    <label class="form-label fw-bold">Temat:</label>
    <p>@Model.Temat</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Treść:</label>
    <p>@Model.Tresc</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Email:</label>
    <p>@Model.Email</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Data wysłania:</label>
    <p>@Model.DataWyslania.ToString("yyyy-MM-dd HH:mm")</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdZapytania" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>
