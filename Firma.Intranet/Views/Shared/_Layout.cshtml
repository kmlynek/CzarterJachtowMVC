<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Morski Czarter – Intranet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shield-lock-fill me-2"></i> Morski Czarter – Panel Administracyjny
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill me-1"></i> Start
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Jachty">Jachty</a>
                            <i class="bi bi-ship me-1"></i> Jachty
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Strony">Strony</a>
                            <i class="bi bi-file-earmark-text me-1"></i> Strony
                        </a>
                    </li>
                    <li class="nav-item">
                       <a class="nav-link" asp-controller="Home" asp-action="Zapytania">Zapytania</a>
                            <i class="bi bi-inbox-fill me-1"></i> Zapytania
                        </a>
                    </li>
                    <!-- Poniżej kod z odnośnikami z wykładu  -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Strona" asp-action="Index">Strony</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Aktualnosc" asp-action="Index">Aktualnosci</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Rodzaj" asp-action="Index">Rodzaje</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Towar" asp-action="Index">Towary</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 border-top mt-5">
        <p class="mb-0">&copy; 2025 Morski Czarter – Intranet</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
