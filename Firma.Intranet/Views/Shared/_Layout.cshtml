<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Morski Czarter – Intranet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shield-lock-fill me-2"></i> Morski Czarter – Panel Administracyjny
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door-fill me-1"></i> Start
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Parametr" asp-action="Index">
                            <i class="bi bi-sliders"></i> Edytuj treść portalu WWW
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Jacht" asp-action="Index">
                            <i class="bi bi-rocket-takeoff me-1"></i> Jachty
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="KategoriaJachtu" asp-action="Index">
                            <i class="bi bi-bookmark-star me-1"></i> Kategorie
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Port" asp-action="Index">
                            <i class="bi bi-geo-alt-fill me-1"></i> Porty
                        </a>
                    </li>
                    <!--
                     <li class="nav-item">
                         <a class="nav-link" asp-controller="ZdjecieJachtu" asp-action="Index">
                             <i class="bi bi-images me-1"></i> Zdjęcia
                         </a>
                     </li>
                     -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Klient" asp-action="Index">
                            <i class="bi bi-person-fill me-1"></i> Klienci
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Rezerwacja" asp-action="Index">
                            <i class="bi bi-calendar-check-fill me-1"></i> Rezerwacje
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Strona" asp-action="Index">
                            <i class="bi bi-file-earmark-text-fill me-1"></i> Strony
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Zapytanie" asp-action="Index">
                            <i class="bi bi-inbox-fill me-1"></i> Zapytania
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 border-top mt-5">
        <p class="mb-0">&copy; 2025 Morski Czarter – Intranet</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
