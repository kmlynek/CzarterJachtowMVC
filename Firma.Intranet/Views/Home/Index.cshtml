@{
    ViewData["Title"] = "Panel startowy";
}

<div class="alert alert-info d-flex align-items-center" role="alert">
    <i class="bi bi-info-circle-fill me-2"></i>
    Witaj w panelu administracyjnym Morski Czarter!
</div>

<!-- Sekcja Statystyki -->
<h4 class="mb-3">Statystyki</h4>
<div class="row g-4 mb-5">
    <!-- Strony -->
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-file-earmark-text-fill display-4 text-success mb-2"></i>
                <h5 class="card-title">@ViewBag.LiczbaStron</h5>
                <p class="card-text text-muted">Liczba stron</p>
            </div>
        </div>
    </div>
    <!-- Zapytania -->
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-inbox-fill display-4 text-danger mb-2"></i>
                <h5 class="card-title">@ViewBag.LiczbaZapytan</h5>
                <p class="card-text text-muted">Ilość zapytań od klientów</p>
            </div>
        </div>
    </div>
    <!-- Rezerwacje -->
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-calendar-check-fill display-4 text-warning mb-2"></i>
                <h5 class="card-title">@ViewBag.LiczbaRezerwacji</h5>
                <p class="card-text text-muted">Liczba rezerwacji</p>
            </div>
        </div>
    </div>
    <!-- Klienci -->
    <div class="col-md-3">
        <div class="card text-center shadow-sm">
            <div class="card-body">
                <i class="bi bi-person-fill display-4 text-primary mb-2"></i>
                <h5 class="card-title">@ViewBag.LiczbaKlientow</h5>
                <p class="card-text text-muted">Ilość klientów</p>
            </div>
        </div>
    </div>
</div>


<!-- Sekcja Szybki dostęp -->
<h4 class="mb-3">Szybki dostęp</h4>
<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="card shadow-sm h-100 text-center">
            <div class="card-body d-flex flex-column justify-content-between">
                <i class="bi bi-rocket display-3 text-primary mb-3"></i>
                <h5 class="card-title">Zarządzaj jachtami</h5>
                <p class="card-text">Dodawaj, edytuj i usuwaj jednostki pływające z oferty.</p>
                <a asp-controller="Jacht" asp-action="Index" class="btn btn-outline-primary mt-3">Przejdź</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm h-100 text-center">
            <div class="card-body d-flex flex-column justify-content-between">
                <i class="bi bi-people-fill display-3 text-dark mb-3"></i>
                <h5 class="card-title">Baza klientów</h5>
                <p class="card-text">Lista wszystkich zarejestrowanych klientów.</p>
                <a asp-controller="Klient" asp-action="Index" class="btn btn-outline-dark mt-3">Przejdź</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm h-100 text-center">
            <div class="card-body d-flex flex-column justify-content-between">
                <i class="bi bi-calendar-event-fill display-3 text-warning mb-3"></i>
                <h5 class="card-title">Rezerwacje</h5>
                <p class="card-text">Podgląd aktualnych i archiwalnych rezerwacji.</p>
                <a asp-controller="Rezerwacja" asp-action="Index" class="btn btn-outline-warning mt-3">Przejdź</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm h-100 text-center">
            <div class="card-body d-flex flex-column justify-content-between">
                <i class="bi bi-images display-3 text-secondary mb-3"></i>
                <h5 class="card-title">Galeria jachtów</h5>
                <p class="card-text">Zarządzaj zdjęciami przypisanymi do jachtów.</p>
                <a asp-controller="ZdjecieJachtu" asp-action="Index" class="btn btn-outline-secondary mt-3">Przejdź</a>
            </div>
        </div>
    </div>
</div>
