@model IEnumerable<Firma.Data.Data.Rezerwacje.Rezerwacja>

@{
    ViewData["Title"] = "Rezerwacje";
}

<h2 class="mb-4"><i class="bi bi-calendar-check me-2"></i>Lista rezerwacji</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Dodaj rezerwację
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Data od</th>
            <th>Data do</th>
            <th>IdJacht</th>
            <th>IdKlient</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataOd.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.DataDo.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@item.IdJachtu</td> 
                <td>@item.IdKlienta</td> 
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRezerwacji" class="btn btn-warning btn-sm me-1" title="Edytuj">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdRezerwacji" class="btn btn-danger btn-sm" title="Usuń">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
