@model Firma.Data.Data.Rezerwacje.Rezerwacja

@{
    ViewData["Title"] = "Usuń rezerwację";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i>Usuń rezerwację</h2>

<h4 class="mb-3">Czy na pewno chcesz usunąć tę rezerwację?</h4>

<div class="mb-3">
    <label class="form-label fw-bold">Data od:</label>
    <p>@Model.DataOd.ToString("yyyy-MM-dd HH:mm")</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Data do:</label>
    <p>@Model.DataDo.ToString("yyyy-MM-dd HH:mm")</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Jacht (ID):</label>
    <p>@Model.IdJachtu</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Klient (ID):</label>
    <p>@Model.IdKlienta</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdRezerwacji" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left-circle me-1"></i> Anuluj
    </a>
</form>
