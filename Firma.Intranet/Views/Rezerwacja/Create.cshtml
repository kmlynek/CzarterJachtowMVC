@model Firma.Data.Data.Rezerwacje.Rezerwacja

@{
    ViewData["Title"] = "Dodaj rezerwację";
}

<h2 class="mb-4"><i class="bi bi-calendar-plus me-2"></i>Dodaj rezerwację</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" class="border p-4 rounded bg-light shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="DataOd" class="form-label"></label>
                <input asp-for="DataOd" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataOd" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DataDo" class="form-label"></label>
                <input asp-for="DataDo" class="form-control" type="datetime-local" />
                <span asp-validation-for="DataDo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdJachtu" class="form-label"></label>
                <select asp-for="IdJachtu" class="form-select" asp-items="ViewBag.IdJachtu"></select>
                <span asp-validation-for="IdJachtu" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="IdKlienta" class="form-label"></label>
                <select asp-for="IdKlienta" class="form-select" asp-items="ViewBag.IdKlienta"></select>
                <span asp-validation-for="IdKlienta" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Zapisz
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i>Wróć
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
