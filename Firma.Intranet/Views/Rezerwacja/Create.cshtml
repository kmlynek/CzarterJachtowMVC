@model Firma.Data.Data.Rezerwacje.Rezerwacja

@{
    ViewData["Title"] = "Dodaj rezerwację";
}

<h1>Dodaj rezerwację</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <label asp-for="DataOd" class="control-label"></label>
                <input asp-for="DataOd" class="form-control" type="date" />
                <span asp-validation-for="DataOd" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="DataDo" class="control-label"></label>
                <input asp-for="DataDo" class="form-control" type="date" />
                <span asp-validation-for="DataDo" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="IdJachtu" class="control-label"></label>
                <select asp-for="IdJachtu" class="form-control" asp-items="ViewBag.IdJachtu"></select>
                <span asp-validation-for="IdJachtu" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdKlienta" class="control-label"></label>
                <select asp-for="IdKlienta" class="form-control" asp-items="ViewBag.IdKlienta"></select>
                <span asp-validation-for="IdKlienta" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
