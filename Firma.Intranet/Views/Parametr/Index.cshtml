@model IEnumerable<Firma.Data.Data.CMS.Parametr>

@{
    ViewData["Title"] = "Teksty portalu WWW";
}

<h2 class="mb-4">Treść portalu WWW</h2>
<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Dodaj parametr
</a>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Klucz</th>
            <th>Wartość</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="fw-bold">@item.Klucz</td>
                <td>@item.Wartosc</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdParametru" class="btn btn-sm btn-outline-secondary me-2">
                        <i class="bi bi-pencil-square"></i> Edytuj
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdParametru" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash3"></i> Usuń
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
