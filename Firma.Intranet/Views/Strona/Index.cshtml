@model IEnumerable<Firma.Data.Data.CMS.Strona>

@{
    ViewData["Title"] = "Strony";
}

<h2 class="mb-4"><i class="bi bi-file-earmark-text me-2"></i>Lista stron</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Dodaj stronę
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Link</th>
            <th>Tytuł</th>
            <th>Treść</th>
            <th>Pozycja</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LinkTytul</td>
                <td>@item.Tytul</td>
                <td>@item.Tresc</td>
                <td>@item.Pozycja</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdStrony" class="btn btn-warning btn-sm me-1" title="Edytuj">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdStrony" class="btn btn-danger btn-sm" title="Usuń">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
