@model Firma.Data.Data.CMS.Strona

@{
    ViewData["Title"] = "Usuń stronę";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i>Usuń stronę</h2>

<h4 class="mb-3">Czy na pewno chcesz usunąć tę stronę?</h4>

<div class="mb-3">
    <label class="form-label fw-bold">Link tytuł:</label>
    <p>@Model.LinkTytul</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Tytuł:</label>
    <p>@Model.Tytul</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Treść:</label>
    <p>@Model.Tresc</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Pozycja:</label>
    <p>@Model.Pozycja</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdStrony" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>
