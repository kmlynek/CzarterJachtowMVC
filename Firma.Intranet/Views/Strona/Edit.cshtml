@model Firma.Data.Data.CMS.Strona

@{
    ViewData["Title"] = "Edytuj stronę";
}

<h2 class="mb-4"><i class="bi bi-pencil-square me-2"></i>Edytuj stronę</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdStrony" />

            <div class="form-group mb-3">
                <label asp-for="LinkTytul" class="form-label"></label>
                <input asp-for="LinkTytul" class="form-control" />
                <span asp-validation-for="LinkTytul" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tytul" class="form-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Tresc" class="form-label"></label>
                <input asp-for="Tresc" class="form-control" />
                <span asp-validation-for="Tresc" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Pozycja" class="form-label"></label>
                <input asp-for="Pozycja" class="form-control" />
                <span asp-validation-for="Pozycja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-save"></i> Zapisz zmiany
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Wróć
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
