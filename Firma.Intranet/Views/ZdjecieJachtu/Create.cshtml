@model Firma.Data.Data.Flota.ZdjecieJachtu

@{
    ViewData["Title"] = "Dodaj zdjęcie jachtu";
}

<h2 class="mb-4"><i class="bi bi-image me-2"></i>Dodaj zdjęcie jachtu</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" class="border p-4 rounded bg-light shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="IdJachtu" class="form-label"></label>
                <select asp-for="IdJachtu" class="form-select" asp-items="ViewBag.IdJachtu"></select>
                <span asp-validation-for="IdJachtu" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Sciezka" class="form-label"></label>
                <input asp-for="Sciezka" class="form-control" />
                <span asp-validation-for="Sciezka" class="text-danger"></span>
            </div>

            <div>
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Dodaj zdjęcie
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i>Wróć
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
