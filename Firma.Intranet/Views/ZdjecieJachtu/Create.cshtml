@model Firma.Data.Data.Flota.ZdjecieJachtu

@{
    ViewData["Title"] = "Dodaj zdjęcie jachtu";
}

<h1>Dodaj zdjęcie jachtu</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdJachtu" class="control-label"></label>
                <select asp-for="IdJachtu" class="form-control" asp-items="ViewBag.IdJachtu"></select>
                <span asp-validation-for="IdJachtu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sciezka" class="control-label"></label>
                <input asp-for="Sciezka" class="form-control" />
                <span asp-validation-for="Sciezka" class="text-danger"></span>
            </div>



            <div class="form-group mt-3">
                <input type="submit" value="Dodaj zdjęcie" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Wstecz</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
