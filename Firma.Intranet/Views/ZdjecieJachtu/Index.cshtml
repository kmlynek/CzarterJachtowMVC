@model IEnumerable<Firma.Data.Data.Flota.ZdjecieJachtu>

@{
    ViewData["Title"] = "Zdjęcia jachtów";
}

<h2 class="mb-4"><i class="bi bi-images me-2"></i>Lista zdjęć jachtów</h2>

<p>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Dodaj nowe zdjęcie
    </a>
</p>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Podgląd</th>
            <th>Ścieżka</th>
            <th>Jacht</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.Sciezka" alt="Zdjęcie jachtu" style="max-height: 80px;" class="img-thumbnail" />
                </td>
                <td>@item.Sciezka</td>
                <td>@item.IdJachtu</td>
                <td>
                    <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@item.IdZdjecia" title="Edytuj">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdZdjecia" title="Usuń">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
