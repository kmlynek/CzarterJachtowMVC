@model Firma.Data.Data.Flota.ZdjecieJachtu

@{
    ViewData["Title"] = "Usuń zdjęcie";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i>Usuń zdjęcie jachtu</h2>

<h4 class="mb-3">Czy na pewno chcesz usunąć to zdjęcie?</h4>

<div class="mb-3">
    <label class="form-label fw-bold">Podgląd:</label><br />
    <img src="@Model.Sciezka" alt="Podgląd zdjęcia" style="max-height: 120px;" class="border rounded shadow-sm" />
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Ścieżka:</label>
    <p>@Model.Sciezka</p>
</div>

<div class="mb-3">
    <label class="form-label fw-bold">Jacht:</label>
    <p>@Model.Jacht?.Nazwa (ID: @Model.IdJachtu)</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdZdjecia" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>
