@model Firma.Data.Data.Flota.KategoriaJachtu

@{
    ViewData["Title"] = "Edytuj kategorię jachtu";
}

<h2 class="mb-4"><i class="bi bi-pencil-square me-2"></i>Edytuj kategorię jachtu</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="IdKategorii" />
    <div class="mb-3">
        <label asp-for="Nazwa" class="form-label"></label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-warning">
            <i class="bi bi-save"></i> Zapisz zmiany
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i>Wróć
        </a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
