@model IEnumerable<Firma.Data.Data.Flota.KategoriaJachtu>

@{
    ViewData["Title"] = "Kategorie jachtów";
}

<h2 class="mb-4"><i class="bi bi-tags-fill me-2"></i>Kategorie jachtów</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Dodaj kategorię
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(m => m.IdKategorii)</th>
            <th>@Html.DisplayNameFor(m => m.Nazwa)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdKategorii</td>
                <td>@item.Nazwa</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKategorii" class="btn btn-warning btn-sm me-1">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdKategorii" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
