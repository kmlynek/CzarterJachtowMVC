@model Firma.Data.Data.Flota.Port

@{
    ViewData["Title"] = "Edytuj port";
}

<h2 class="mb-4"><i class="bi bi-pencil-square me-2"></i>Edytuj port</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdPortu" />

            <div class="form-group mb-3">
                <label asp-for="Nazwa" class="form-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Lokalizacja" class="form-label"></label>
                <input asp-for="Lokalizacja" class="form-control" />
                <span asp-validation-for="Lokalizacja" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-save"></i> Zapisz zmiany
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Wróć
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
