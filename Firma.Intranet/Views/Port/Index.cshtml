@model IEnumerable<Firma.Data.Data.Flota.Port>

@{
    ViewData["Title"] = "Porty";
}

<h2 class="mb-4"><i class="bi bi-pin-map-fill me-2"></i>Lista portów</h2>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Dodaj port
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Nazwa</th>
            <th>Lokalizacja</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nazwa</td>
                <td>@item.Lokalizacja</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdPortu" class="btn btn-warning btn-sm me-1" title="Edytuj">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdPortu" class="btn btn-danger btn-sm" title="Usuń">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
