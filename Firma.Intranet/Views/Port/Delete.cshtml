@model Firma.Data.Data.Flota.Port

@{
    ViewData["Title"] = "Usuń port";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash-fill me-2"></i>Usuń port</h2>

<h4 class="mb-3">Czy na pewno chcesz usunąć ten port?</h4>

<div class="mb-3">
    <label class="form-label fw-bold">Nazwa:</label>
    <p>@Model.Nazwa</p>
</div>
<div class="mb-3">
    <label class="form-label fw-bold">Lokalizacja:</label>
    <p>@Model.Lokalizacja</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdPortu" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>
