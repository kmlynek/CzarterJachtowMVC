@model Firma.Data.Data.Flota.Jacht

@{
    ViewData["Title"] = "Dodaj jacht";
}

<h1 class="mb-4"><i class="bi bi-plus-square me-2"></i>Dodaj jacht</h1>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" class="border p-4 rounded bg-light shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Nazwa" class="form-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RokBudowy" class="form-label"></label>
                <input asp-for="RokBudowy" class="form-control" />
                <span asp-validation-for="RokBudowy" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CenaZaDzien" class="form-label"></label>
                <input asp-for="CenaZaDzien" class="form-control" />
                <span asp-validation-for="CenaZaDzien" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Opis" class="form-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdKategorii" class="form-label"></label>
                <select asp-for="IdKategorii" class="form-select" asp-items="ViewBag.IdKategorii"></select>
                <span asp-validation-for="IdKategorii" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdPortu" class="form-label"></label>
                <select asp-for="IdPortu" class="form-select" asp-items="ViewBag.IdPortu"></select>
                <span asp-validation-for="IdPortu" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-start mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i>Zapisz
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i>Wróć
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
