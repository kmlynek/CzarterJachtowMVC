@model Firma.Data.Data.Flota.Jacht

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Jacht</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RokBudowy" class="control-label"></label>
                <input asp-for="RokBudowy" class="form-control" />
                <span asp-validation-for="RokBudowy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CenaZaDzien" class="control-label"></label>
                <input asp-for="CenaZaDzien" class="form-control" />
                <span asp-validation-for="CenaZaDzien" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />               
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdKategorii" class="control-label"></label>
                <select asp-for="IdKategorii" class="form-control" asp-items="ViewBag.IdKategorii"></select>
                <span asp-validation-for="IdKategorii" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdPortu" class="control-label"></label>
                <select asp-for="IdPortu" class="form-control" asp-items="ViewBag.IdPortu"></select>
                <span asp-validation-for="IdPortu" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ms-2">Powrót</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
