@model Firma.Data.Data.Flota.Jacht

@{
    ViewData["Title"] = "Usuń jacht";
}

<h2 class="mb-4 text-danger"><i class="bi bi-trash3-fill me-2"></i>Usuń jacht</h2>

<h5 class="mb-3">Czy na pewno chcesz usunąć ten jacht?</h5>

    <dl class="row">
        <dt class="col-sm-3">Nazwa</dt>
        <dd class="col-sm-9">@Model.Nazwa</dd>

        <dt class="col-sm-3">Rok budowy</dt>
        <dd class="col-sm-9">@Model.RokBudowy</dd>

        <dt class="col-sm-3">Cena za dzień</dt>
        <dd class="col-sm-9">@Model.CenaZaDzien</dd>

        <dt class="col-sm-3">Opis</dt>
        <dd class="col-sm-9">@Model.Opis</dd>

        <dt class="col-sm-3">Kategoria</dt>
        <dd class="col-sm-9">@Model.IdKategorii</dd>

        <dt class="col-sm-3">Port</dt>
        <dd class="col-sm-9">@Model.IdPortu</dd>
    </dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="IdJachtu" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-trash-fill me-1"></i>Usuń
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i>Wróć
    </a>
</form>
